<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
        android:id="@+id/addedit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/addedit_name"
        android:inputType="textNoSuggestions"
        android:maxLength="64"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addedit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/addedit_description"
        android:inputType="textMultiLine"
        android:maxLength="256"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/addedit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addedit_name" />

    <EditText
        android:id="@+id/addedit_sortorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/addedit_sortorder"
        android:inputType="number"
        android:maxLength="9"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/addedit_description"
        app:layout_constraintStart_toStartOf="@+id/addedit_description"
        app:layout_constraintTop_toBottomOf="@+id/addedit_description" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addedit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/addedit_save"
        app:layout_constraintEnd_toEndOf="@+id/addedit_sortorder"
        app:layout_constraintStart_toStartOf="@+id/addedit_sortorder"
        app:layout_constraintTop_toBottomOf="@+id/addedit_sortorder" />
</androidx.constraintlayout.widget.ConstraintLayout>